<h1>New Search</h1>


<%= form_for @search  do |f| %>
   <div class="form-inputs">
    <%= f.text_field :user %>
    <%= f.select :title, options_for_select(@titles), :include_blank => true %>
    <%= f.text_field :description %>
    <%= f.text_field :tag %>
  </div>

  <div class="form-actions">
    <%= f.submit :submit %>
  </div>
<% end %>

<%= link_to 'Back', searches_path %>
