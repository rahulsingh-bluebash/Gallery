<div class="container mb-4 pt-5">
    <div class="row-fluid pb-2">
        <h1 id="publish" class="font-weight-bolder">Published by user :</h1>
    </div>
    <div class="container">
        <div class="row mb-5 pt-5 justify-content-md-center">
            <% @albums.each do |album| %>
            <% if album.publish? %>
            <div class="col-3 m-4 card">

                <div class="card-body ">
                    <p><strong>User: </strong><%= album.user.email.split('@')[0] %></p>
                    <p><strong>Title: </strong><%= album.title %></p>
                    <p><strong>Published On: </strong><span class="text-muted"><%= album.created_at.to_s.split(' ')[0] %></span></p>
                    <p><strong>Last Updated: </strong><span class="text-muted"><%= album.updated_at.to_s.split(' ')[0] %></span></p>
                    <%= link_to 'Show', album , class:'btn btn-secondary text-white btn-sm' %>
                </div>
                <div class="card-footer text-muted">
                    Tags : <%= album.tag %>
                </div>
            </div>
            <% end %>
            <% end %>
        </div>


    </div>
</div>


<div class="container">
    <hr>
</div>






