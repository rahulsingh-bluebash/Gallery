<p id="notice"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="col h4  align-self-center">
            <strong>Title:</strong>
            <%= @album.title %>
        </div>
        <div class="col ">
            <button class="btn btn-sm btn-secondary float-right">
                <p class="h4"> <%= link_to 'Edit', edit_album_path(@album) %>
            </button>
        </div>
    </div>
</div>


<div class="container pt-4">
    <div class="row">
        <% (0...@album.images.count).each do |image| %>
        <div class="col-4 pt-3">
            <div class="card-group ">
                <div class="card">
                    <%= image_tag(@album.thumbnail(image) )%>
                    <div class="card-body">
                        <h5 class="card-title">
                            Title:
                            <%= @album.title %></h5>
                        <h5>
                            Description:
                            <%= @album.discription %></h5>
                        <p class="">Publish On :<%= @album.created_at.to_s.split(' ')[0] %></p>
                        <p> Tags: <%= @album.tag %> </p>

                        <div class="card-footer btn float-right shadow-lg">
                            <%= link_to 'Remove', delete_upload_album_url(@album.images[image]), method: :delete, data: { confirm: 'Are you sure?' } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    </div>
</div>


<div class="container-fluid">
    <div class="row float-right pb-3">
        <button class="btn btn-sm btn-secondary  text-center">
            <p class="h4 "> <%= link_to 'Back', albums_path %>

        </button>
    </div>


</div>